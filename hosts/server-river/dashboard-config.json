{
  "dashboard": {
    "id": null,
    "title": "Server-River - System Overview",
    "tags": ["server", "backup", "zfs"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "🔍 System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"node\"}",
            "legendFormat": "System Up"
          },
          {
            "expr": "time() - node_boot_time_seconds",
            "legendFormat": "Uptime (seconds)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "mappings": [
              {
                "type": "value",
                "options": {
                  "1": {
                    "text": "🟢 Online"
                  },
                  "0": {
                    "text": "🔴 Offline"
                  }
                }
              }
            ]
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "💾 Backup Health",
        "type": "stat",
        "targets": [
          {
            "expr": "backup_last_success_timestamp",
            "legendFormat": "Last Backup"
          },
          {
            "expr": "increase(backup_job_failures_total[24h])",
            "legendFormat": "Failures (24h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dtdurations",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 3600
                },
                {
                  "color": "red",
                  "value": 86400
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "📊 Storage Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "(1 - node_filesystem_avail_bytes{mountpoint=\"/tank\"} / node_filesystem_size_bytes{mountpoint=\"/tank\"}) * 100",
            "legendFormat": "Storage Used %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "red",
                  "value": 95
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "🔄 ZFS Health",
        "type": "stat",
        "targets": [
          {
            "expr": "zfs_pool_health{pool=\"tank\"}",
            "legendFormat": "Pool Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "🟢 Healthy"
                  },
                  "1": {
                    "text": "🟡 Degraded"
                  },
                  "2": {
                    "text": "🔴 Faulted"
                  }
                }
              }
            ]
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "📈 Storage Growth Trend",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_filesystem_size_bytes{mountpoint=\"/tank\"} - node_filesystem_avail_bytes{mountpoint=\"/tank\"}",
            "legendFormat": "Used Space"
          },
          {
            "expr": "node_filesystem_avail_bytes{mountpoint=\"/tank\"}",
            "legendFormat": "Available Space"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 6,
        "title": "🔄 Backup Success Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(backup_job_success_total[1h]) * 3600",
            "legendFormat": "Successful Backups/hour"
          },
          {
            "expr": "rate(backup_job_failures_total[1h]) * 3600",
            "legendFormat": "Failed Backups/hour"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        }
      },
      {
        "id": 7,
        "title": "💻 System Resources",
        "type": "timeseries",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
            "legendFormat": "Memory Usage %"
          },
          {
            "expr": "rate(node_disk_io_time_seconds_total[5m]) * 100",
            "legendFormat": "Disk I/O %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 8,
        "title": "🌐 Network Activity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m]) * 8",
            "legendFormat": "RX {{device}}"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m]) * 8",
            "legendFormat": "TX {{device}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bps"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 9,
        "title": "🔧 Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "node_systemd_unit_state{name=\"syncthing.service\",state=\"active\"}",
            "legendFormat": "Syncthing"
          },
          {
            "expr": "node_systemd_unit_state{name=\"nfs-server.service\",state=\"active\"}",
            "legendFormat": "NFS Server"
          },
          {
            "expr": "node_systemd_unit_state{name=\"borgbackup-job-tank-local.service\",state=\"active\"}",
            "legendFormat": "Backup Service"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "1": {
                    "text": "🟢 Active"
                  },
                  "0": {
                    "text": "🔴 Inactive"
                  }
                }
              }
            ]
          }
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 20
        }
      }
    ]
  }
}